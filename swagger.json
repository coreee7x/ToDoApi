{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ToDo-Api",
    "description": "API für das Verwalten von To-Do-Listen und Einträgen"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/getAllListen": {
      "get": {
        "summary": "Gibt alle Listen zurück",
        "responses": {
          "200": {
            "description": "Erfolgreich",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/getAllEinträgeById": {
      "get": {
        "summary": "Gibt alle Einträge einer bestimmten Liste zurück",
        "parameters": [
          {
            "name": "liste_id",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "ID der Liste"
          }
        ],
        "responses": {
          "200": {
            "description": "Erfolgreich",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "beschreibung": { "type": "string" },
                  "liste_id": { "type": "string" }
                }
              }
            }
          },
          "400": { "description": "Listen-ID fehlt" }
        }
      }
    },
    "/insertListe": {
      "post": {
        "summary": "Erstellt eine neue Liste",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Liste erfolgreich erstellt",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "id": { "type": "string" }
              }
            }
          },
          "400": { "description": "Name der Liste fehlt" }
        }
      }
    },
    "/insertEintrag": {
      "post": {
        "summary": "Fügt einen neuen Eintrag zu einer Liste hinzu",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "beschreibung": { "type": "string" },
                "liste_id": { "type": "string" }
              },
              "required": ["name", "beschreibung", "liste_id"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Eintrag erfolgreich erstellt",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "id": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Fehlende Felder: name, beschreibung oder liste_id"
          },
          "404": {
            "description": "Liste mit der angegebenen ID existiert nicht"
          }
        }
      }
    },
    "/deleteEintrag": {
      "post": {
        "summary": "Löscht einen Eintrag",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "string" }
              },
              "required": ["id"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Eintrag erfolgreich gelöscht",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "id": { "type": "string" }
              }
            }
          },
          "400": { "description": "Eintrags-ID fehlt" },
          "404": {
            "description": "Eintrag mit der angegebenen ID existiert nicht"
          }
        }
      }
    },
    "/deleteListe": {
      "post": {
        "summary": "Löscht eine Liste und ihre Einträge",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "string" }
              },
              "required": ["id"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste und ihre Einträge erfolgreich gelöscht",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "id": { "type": "string" }
              }
            }
          },
          "400": { "description": "Listen-ID fehlt" },
          "404": {
            "description": "Liste mit der angegebenen ID existiert nicht"
          }
        }
      }
    }
  }
}
